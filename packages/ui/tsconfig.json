{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["src", "**/.storybook"]
}